extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug

block main

  <!-- Hiển thị thông báo thành công -->
  +alert-success("5000")

  h1 Danh sách sản phẩm

  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      .row
        .col-6 <!-- Các nút trạng thái vd: Tất cả, hoạt đọng, dừng hoạt động -->
          +filter-status(filterStatus)

        .col-6 <!-- Ô tìm kiếm sản phẩm -->
          +search(keyword)

  .card.mb-3
    .card-header Sắp xếp
    .card-body
      .row
        .col-4
          +sort()

  .card.mb-3 <!-- Hiển thị danh sách sản phẩm -->
    .card-header Danh sách 
      .card-body <!-- Tính năng thay đổi trạng thái nhiều sản phẩm -->
        .row 
          .col-8
            +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`) 
          .col-4 <!-- Tính năng lấy ra trang tạo mới sản phẩm-->
            a(
              href=`${prefixAdmin}/products/create`
              class="btn btn-outline-success"
            ) + thêm mới 


    table(
      class="table.table-hover.table-sm"
      checkbox-multi
    )
      thead
        tr
          th 
            input(type="checkbox" name="checkall")
          th STT
          th Hình ảnh
          th Tiêu đề
          th Giá
          th Vị trí
          th Trạng thái
          th Hành động
      tbody
        each item, index in products
          tr
            td 
              input(
                type="checkbox"
                name="id"
                value=item.id
              )
            td #{pagination.limitItems*(pagination.currentPage - 1) + (index + 1)}
            td
              img(
                src=item.thumbnail
                alt=item.title
                width="100px"
                height="auto"
              )
            td #{item.title}
            td #{item.price}$
            td 
              input(
                type="number"
                value=item.position 
                style="width: 60px"
                min="1"
                name="position"
              )
            td <!-- Tính năng thay đổi trạng thái sản phẩm -->
              if(item.status == "active")
                a(
                  href="javascript:;" 
                  data-status=item.status
                  data-id=item.id 
                  button-change-status
                  class="badge badge-success"
                ) Hoạt động
              else 
                a(
                  href="javascript:;" 
                  data-status=item.status
                  data-id=item.id 
                  button-change-status
                  class="badge badge-danger"
                ) Dừng hoạt động
            td
              a(
                href=`${prefixAdmin}/products/detail/${item.id}`
                class="btn btn-secondary btn-sm"
              ) Chi tiết
              a(
                href=`${prefixAdmin}/products/edit/${item.id}`
                class="btn btn-warning btn-sm"
              ) Sửa
              button( 
                class="btn btn-danger btn-sm ml-1" 
                button-delete
                data-id=item.id
              ) Xóa <!-- Tính năng xoá sản phẩm -->

  <!-- Hiển thị phân trang -->
  +pagination(pagination) 

  <!-- Tính năng thay đổi trạng thái sản phẩm -->
  form(
    action=""
    method="POST"
    id="form-change-status"
    data-path=`${prefixAdmin}/products/change-status`
  )

  <!-- Tính năng xoá sản phẩm -->
  form(
    action=""
    method="POST"
    id="form-delete-item"
    data-path=`${prefixAdmin}/products/delete` 
  )

  script(src="/admin/js/product.js")
